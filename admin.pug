mixin songItem(data)
  tr
    td.id= data.id
    td.name= data.name
    td.like= data.likes
        i.fas.fa-heart.icon
    td.timeUpdate= data.timeUpdate
    td.view 
        i.fas.fa-eye.icon
    td.action 
        .update 
            i.fal.fa-edit.icon
        .delete 
            i.far.fa-trash-alt.icon

