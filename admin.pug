doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="css/app.css")
        link(rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.15.1/css/all.css' type='text/css')

    body#main
        section.admin__sidebar 
            .logo 
                a(href="index.html" class="header-brand")
                    img(src="./img/core-img/logo.png", alt="")
            .sidebar__main 
                .sidebar__tab.active 
                    p.sidebar__tab-name 
                        i.fas.fa-headphones-alt.icon
                        span Nhạc Vpop
                        i.fas.fa-caret-down.icon
                    .sidebar__tab-child.active Bài hát Vpop nổi bật
                .sidebar__tab
                    p.sidebar__tab-name 
                        i.fas.fa-headphones-alt.icon
                        span Nhạc US-UK
                        i.fas.fa-caret-down.icon
                    .sidebar__tab-child Bài hát US-UK nổi bật
                .sidebar__tab 
                    p.sidebar__tab-name 
                        i.fas.fa-headphones-alt.icon
                        span Nhạc Lofi
                        i.fas.fa-caret-down.icon
                    .sidebar__tab-child Bài hát Lofi nổi bật
                .sidebar__tab
                    p.sidebar__tab-name
                        i.fas.fa-sliders-h.icon
                        span.sidebar__tab-name Background  
        section.admin__container
            .admin__header
                .header__search 
                    form(action="" method="post")
                        input(type="text" name="header-search" placeholder="Search and hit enter...")
                        button(type="submit" class="btn") 
                            i.fa.fa-search
                .header__user 
                    .user__avatar
                        img(src="./img/avatar.jpg", alt="")
                    .user__info 
                        .user__name John Doe
                        .user__role Admin
            .admin__content 
                .admin__content-overview
                    .overview__item
                        .overview__item-info
                            .overview__item-value 54
                            .overview__item-unit Album
                        .overview__item-icon
                            i.fas.fa-album
                    .overview__item
                        .overview__item-info
                            .overview__item-value 123
                            .overview__item-unit Love
                        .overview__item-icon
                            i.fas.fa-heart
                    .overview__item
                        .overview__item-info
                            .overview__item-value 34
                            .overview__item-unit User Like
                        .overview__item-icon
                            i.fas.fa-user
                .admin__content-header 
                    h1 All playlist 
                    .sort-select
                        select
                            option(value='default') Sort by:
                            option(value='a-z') Name: A - Z
                            option(value='z-a') Name: Z - A
                            option(value='time') Time Update
                            option(value='like') Most Like
                            
