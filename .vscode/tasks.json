  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run sass",
      "type": "shell",
      "command": "sass ./scss/app.scss ./css/app.css --watch"
    },
    {
      "label": "Run pug",
      "type": "shell",
      "command": "pug index.pug index.html --watch --pretty"
    },
    {
      "label": "Run pug admin",
      "type": "shell",
      "command": "pug admin.pug admin.html --watch --pretty"
    },
    {
      "label": "Run pug vpop",
      "type": "shell",
      "command": "pug vpop.pug vpop.html --watch --pretty"
    },
    {
      "label": "Run pug us-uk",
      "type": "shell",
      "command": "pug usuk.pug usuk.html --watch --pretty"
    },
    {
      "label": "Run pug lofi",
      "type": "shell",
      "command": "pug lofi.pug lofi.html --watch --pretty"
    }
  ]
}
