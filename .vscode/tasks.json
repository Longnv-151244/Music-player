  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run sass",
      "type": "shell",
      "command": "sass ./web/scss/app.scss ./web/css/app.css --watch"
    },
    {
      "label": "Run pug",
      "type": "shell",
      "command": "pug ./web/home.pug ./web/home.html --watch --pretty"
    },
    {
      "label": "Run pug admin",
      "type": "shell",
      "command": "pug ./web/admin.pug ./web/admin.html --watch --pretty"
    },
    {
      "label": "Run pug vpop",
      "type": "shell",
      "command": "pug ./web/vpop.pug ./web/vpop.html --watch --pretty"
    },
    {
      "label": "Run pug us-uk",
      "type": "shell",
      "command": "pug ./web/usuk.pug ./web/usuk.html --watch --pretty"
    },
    {
      "label": "Run pug lofi",
      "type": "shell",
      "command": "pug ./web/lofi.pug ./web/lofi.html --watch --pretty"
    }
  ]
}
