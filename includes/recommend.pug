//- Mixins
mixin song_item(songData)
    div(class=`song-item ${songData.isActive}`)
        .song-content
            .song-img
                img(src= songData.src, alt="")
            .song-info 
                h2.song-name= songData.name
                .song-author= songData.author
        .song-duration= songData.duration
        .player__content
            .player__control 
                .play 
                    i.fas.fa-play
                span.currenTime 00:00
                .sidebarTime 
                span.duration= songData.duration
        .song-option 
            .addList 
                i.fas.fa-plus
            .like 
                i.far.fa-heart

