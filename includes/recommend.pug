//- Mixins
mixin song_item(songData)
    div(class=`song-item ${songData.isActive}`)
        .song-content
            .song-img.bg-img(style=`background-image: url('${songData.src}');`)
                .song-img--hover
                    i.fas.fa-play
            .song-info 
                h2.song-name= songData.name
                .song-author= songData.author
        .song-duration= songData.duration
        .player__content
            .player__control 
                .play
                    i.fas.fa-play-circle
                .pause.active
                    i.fas.fa-pause-circle
                span.currenTime 00:00
                .sidebarTime--bg
                    .sidebarTime--current
                span.duration= songData.duration
        .song-option 
            .addList 
                i.fas.fa-plus
            .like 
                i.far.fa-heart

section#recommend
    .container
        h1.text-center Lựa chọn của Poca
        .line.center-block
        .group-tab__name.text-center
            h3 Vpop 
            h3 US-UK 
            h3 Lofi 
        .group-tab__content
            .tab__container
                .tab__heading 
                    h2 Bài Hát
                    .btn-group 
                        .btn.btn--second.btn-addList 
                            i.fas.fa-download 
                                span Tải về
                        .btn.btn-playAll  
                            i.fas.fa-play
                                    span Phát tất cả
                .tab__content.vpop-tab.active
                    .container__slide.hide-on-mobile
                        .container__slide-show
                    .tab__container-list
                        .play-list 
                .tab__content.usuk-tab
                    .container__slide.hide-on-mobile
                        .container__slide-show
                    .tab__container-list
                        .play-list 
                .tab__content.lofi-tab
                    .container__slide.hide-on-mobile
                        .container__slide-show
                    .tab__container-list
                        .play-list
